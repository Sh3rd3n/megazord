{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/bin"]
	}
}
